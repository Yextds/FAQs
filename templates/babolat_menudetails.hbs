---
{
    "stream": {
        "$id": "babolat-details",
        "source": "knowledgeGraph",
        "destination": "pages",
      "filter": {
        "entityTypes": [
          "faq"
        ],
        "savedFilterIds":[
            "878833023"
            ]
      },
      "fields": [
        "id",
        "uid",
        "meta",
        "name",
        "slug",
        "question",
        "answer"
      ],
      "localization": {
          "locales": ["en"]
      }
    },
     "urlFormat": "{{slug}}.html"
}
---
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
